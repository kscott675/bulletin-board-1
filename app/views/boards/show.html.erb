  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

    <div>
      <div>
        <a href="/boards">
          Go back
        </a>
      </div>

      <div>
        <a href="/insert_post" method="post">
          Add new post
        </a>
      </div>
    </div>

     <form action="/insert_post" method="post">
      <div>
        <label for="title">
          Title
        </label>

        <input type="title" id="title" name="query_title">
      </div>
      </form>

    <hr>

    <div>
      <table border="1">
        <tr>

          <th>
            Post
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>

        <% @list_of_posts.each do |a_post| %>
          <tr>
            <td>
              <%= a_post.title %>
            </td>

            <td>
              Expires on <%= a_post.expires_on %>
            </td>

            <td>
              <%= a_post.body %>
            </td>

            <td>
              Posted on <%= a_post.created_at %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <hr>
